[Unit]
Description=Gunicorn instance for the [APP_NAME] web application
After=network.target

[Service]
User=[LINUX_USER_NAME]
Group=www-data
WorkingDirectory=/home/[LINUX_USER_NAME]/[APP_NAME] #change before execution
#ENV VARIABLES
#None by default
#EXAMPLE:
#Environment="MY_VARIABLE=my_value"
#Environment="ANOTHER_VARIABLE=another_value"
#END EXAMPLE
ExecStart=/home/daniel_langops/[APP_NAME]/venv/bin/gunicorn --config gunicorn_config.py wsgi:app #ensure config name, wsgi (app file) and app variable correct before deployment!
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target
